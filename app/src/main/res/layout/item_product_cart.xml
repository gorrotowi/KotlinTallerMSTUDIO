<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgItemProductCart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtProductCartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgItemProductCart"
        app:layout_constraintTop_toTopOf="@id/imgItemProductCart"
        tools:text="Item Product Name" />

    <ImageView
        android:id="@+id/imgItemProductCartRemove"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_trash_can"
        app:layout_constraintBottom_toTopOf="@id/txtProductCartPrice"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtProductCartPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgItemProductCart"
        tools:text="$30.00" />


</androidx.constraintlayout.widget.ConstraintLayout>